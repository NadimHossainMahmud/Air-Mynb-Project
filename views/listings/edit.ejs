<% layout("./layouts/boilerplate.ejs")%>
<div class="row mt-5">
  <div class="col-8 offset-2">
    <h2>Edit your Listings</h2>
    <form
      method="POST"
      action="/listings/<%= listing.id%>?_method=PUT"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          value="<%= listing.title%>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter a title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">description</label>
        <textarea name="listing[description]" class="form-control" required>
      <%= listing.description%></textarea
        >
        <div class="invalid-feedback">Enter a description</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">price</label>
          <input
            value="<%= listing.price%>"
            name="listing[price]"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter a valid price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">country</label>
          <input
            value="<%= listing.country%>"
            name="listing[country]"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter a country</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">location</label>
        <input
          value="<%= listing.location%>"
          name="listing[location]"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter a location</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">image</label>
        <input
          value="<%= listing.image%>"
          name="listing[image]"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter an Image</div>
      </div>

      <button class="btn btn-dark">Edit</button>
    </form>
  </div>
</div>
