<% layout("./layouts/boilerplate.ejs")%>
<body>
  <div class="editedContainer">
    <div class="editCard" style="width: 18rem">
      <img
        src="<%= listing.image%>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />

      <div class="card-body">
        <div class="title">
          <h3 class="card-title"><%= listing.title%></h3>
        </div>
        <div class="price">
          <h5 class="card-text"><%= listing.price%></h5>
        </div>
       
          <div class="location">
              <p class="card-text"><%= listing.location%></p>
          </div>
      
          <div class="country">
              <p class="card-text"><%= listing.country%></p>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <a href="/listings/<%= listing._id%>/edit" class="btn btn-primary"
              >Edit this listing</a
            >
          </div>
          <div class="col-md-6">
            <form
              method="POST"
              action="/listings/<%= listing._id%>?_method=DELETE"
            >
              <button class="btn btn-danger">Delete this listings</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
